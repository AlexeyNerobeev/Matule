<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Matule"
        tools:targetApi="31">
        <activity
            android:name=".activities.RegistrAccountActivity"
            android:exported="false"
            android:label="@string/title_activity_registr_account"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.FavouriteActivity"
            android:exported="false"
            android:label="@string/title_activity_favourite"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.CartActivity"
            android:exported="false"
            android:label="@string/title_activity_cart"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.SignInActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.OnBoard3"
            android:exported="false"
            android:label="@string/title_activity_on_board3"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.OnBoard2"
            android:exported="false"
            android:label="@string/title_activity_on_board2"
            android:theme="@style/Theme.Matule" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Matule">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>